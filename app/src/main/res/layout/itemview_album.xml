<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/album_item_view_padding"
    android:paddingBottom="@dimen/album_item_view_padding">

    <TextView
        android:id="@+id/albumTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/album_item_view_text_size"
        tools:text="Hello there!" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_item_view_padding" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/album_item_view_divider_height"
        android:background="@android:color/darker_gray" />

</LinearLayout>
